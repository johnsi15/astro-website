---
import Button from '../components/Button.astro'
import { Counter } from '../components/Counter'
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Greeting from '../components/Greeting'
import ButtonType from '../components/ButtonType.astro'

const pageTitle = 'Home'
---

<Layout title={pageTitle}>
  <main class='flex flex-col gap-4 items-start'>
    <h1 class='text-4xl text-center'>{pageTitle}</h1>
    <Header />

    <Button />

    <ButtonType as='a' href='/about' class='border p-2 border-cyan-600 rounded'>Soy un botón</ButtonType>
    <ButtonType class='border p-2 border-cyan-600 rounded'>Soy otro botón</ButtonType>

    <Greeting client:load messages={['Hola', 'Qué tal', 'Hola a todos']} />

    <section class='my-5 w-full'>
      <Counter client:visible />
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
