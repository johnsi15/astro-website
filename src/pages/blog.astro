---
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogPost from '../components/BlogPost.astro'
const allPosts = await getCollection('posts')

import '../styles/global.css'

const pageTitle = 'Mi blog de Astro aprendizaje'
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Mi blog de aprendizaje sobre Astro</h1>
  <p>Aquí es donde publicaré acerca de mi viaje aprendiendo Astro.</p>
  <ul>
    {allPosts.map(post => <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} />)}
  </ul>
</BaseLayout>
